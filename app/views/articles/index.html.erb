<div class="container articles-ct">
  <h1 class="text-center mt-4">All articles</h1>
  <div class="container">
  <% @articles.each do |article| %>
      <div class="row justify-content-md-center justify-content-sm-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header fst-italic">
              by <%= article.user.username if article.user%>
            </div>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to article.title, article_path(article), class:"green-links" %>
              </h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
  <!--            <a href="#" class="btn btn-outline-info ">View</a>-->
              <%= link_to "View", article_path(article), class: "btn btn-outline-info" %>
  <!--            <a href="#" class="btn btn-outline-info ">Edit</a>-->
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
  <!--            <a href="#" class="btn btn-outline-dark ">Delete</a>-->
              <%= link_to 'Delete', article_path(article), class: "btn btn-outline-dark", data: {"turbo-method": :delete, turbo_confirm: 'Are you sure?'} %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
  <% end %>
  </div>
</div>