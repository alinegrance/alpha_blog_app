<div class="container">
  <div class="d-flex row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true,  data: {turbo: false}) do |f| %>
          <div class="row mb-3">
            <%= f.label :title, class: "col-sm-2 col-form-label text-white-50" %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control shadow rounded text-secondary", placeholder: "Title of article" %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :description, class: "col-sm-2 col-form-label text-white-50" %>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: 10, class: "form-control shadow rounded text-secondary", placeholder: "Description of article" %>
            </div>
          </div>

          <div class="d-flex justify-content-center">
            <%= f.submit class: "btn btn-outline-success" %>
          </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to '[Cancel and return to articles listing]', articles_path, class: "green-links" %>
    </div>
  </div>
</div>
